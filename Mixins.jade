
//- ASP.Net Control mixins
mixin RegisterSrc(src, tagname, tagprefix)
	<%@ Register Src='#{src}' TagName="#{tagname}" TagPrefix="#{tagprefix}" %>

mixin aspButton(id, text)
	asp:Button(runat='server',id='#{id}',text='#{text}')

mixin aspLinkButton(id, text)
	asp:LinkButton(runat='server',id='#{id}',text='#{text}')

mixin aspHyperLink(id, text, navurl)
	asp:HyperLink(runat='server',id='#{id}', Text='#{text}', NavigateUrl='#{navurl}')

mixin aspUpdatePanel(id, updatemode, htmlContent)
	asp:UpdatePanel(runat='server', id='#{id}', UpdateMode ='#{updatemode}')
		asp:ContentTemplate
		|	!{htmlContent}
			
//- Kentico Control mixins
mixin cmsRepeater(id, transformName, classname, path)
	- path = path || '/%'
	cms:CMSRepeater(runat='server',ID='#{id}',TransformationName='#{transformName}',Path='#{path}',ClassName='#{classname}')

mixin cmsForm(id, formname, alternativeformname, formmode, showok)
	cms:CMSForm(runat='server', ID='#{id}', FormName='#{formname}', AlternativeFormFullName='#{alternativeformname}', FormMode='#{formmode}', ShowOkButton='#{showok}')

mixin cmsLocalizedLabel(id, resString, cssclass)
	- cssclass = cssclass || 'LocalizedLabel'
	cms:LocalizedLabel(runat='server', id='#{id}', ResourceString='#{resString}', CssClass='#{cssclass}')


